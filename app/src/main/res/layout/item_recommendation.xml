<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 推荐类型图标 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/typeIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="🎬"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/icon1round"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommendationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐标题"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/recommendationType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电影推荐"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/confidenceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/DodgerBlue"
                android:background="@drawable/search_box_modern"
                android:padding="8dp" />
        </LinearLayout>

        <!-- 推荐理由 -->
        <TextView
            android:id="@+id/recommendationReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基于您对动作片的喜爱，为您推荐这部精彩的动作大片"
            android:textSize="15sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/viewDetailsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查看详情"
                android:background="@drawable/search_box_modern"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/addToWishlistButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="加入心愿单"
                android:background="@drawable/search_box_modern"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
