<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beautiful_gradient">

    <!-- 背景装饰圆形 -->
    <View
        android:id="@+id/decorative_circle_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/glassmorphism_background"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp" />

    <View
        android:id="@+id/decorative_circle_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/glassmorphism_background"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-75dp"
        android:layout_marginStart="-75dp" />

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- RatingBar 顶部居中 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ratingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/glass_white"
            app:layout_constraintTop_toBottomOf="@id/img_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <!-- 左边的“评分：”文字 -->
                <TextView
                    android:id="@+id/ratingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分："
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- 蓝色星星的 RatingBar -->
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:layout_marginTop="8dp"
                    android:progressTint="@color/skyblue"
                    android:secondaryProgressTint="@color/skyblue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- 日期 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/dateCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/glass_white"
            app:layout_constraintTop_toBottomOf="@id/ratingCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/diaryPlace">

            <TextView
                android:id="@+id/diaryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="日期"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="12dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <!-- 地点 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/placeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/glass_white"
            app:layout_constraintTop_toBottomOf="@id/ratingCard"
            app:layout_constraintStart_toEndOf="@id/dateCard"
            app:layout_constraintEnd_toStartOf="@+id/weatherCard">

            <TextView
                android:id="@+id/diaryPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="地点"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="12dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <!-- 天气 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/weatherCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/glass_white"
            app:layout_constraintTop_toBottomOf="@id/ratingCard"
            app:layout_constraintStart_toEndOf="@id/placeCard"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/diaryWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="天气"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="12dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <!-- 标题 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/titleCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/glass_white"
            app:layout_constraintTop_toBottomOf="@id/dateCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/diaryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="16dp"
                android:shadowColor="@color/shadow_color"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2" />

        </androidx.cardview.widget.CardView>

        <!-- 日记内容 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/articleCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/glass_white"
            app:layout_constraintTop_toBottomOf="@id/titleCard">

            <TextView
                android:id="@+id/diaryArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="20dp"
                android:minHeight="450dp"
                android:maxHeight="700dp"
                android:gravity="top|start"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

        </androidx.cardview.widget.CardView>
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- 日记图片 -->
        <ImageView
            android:id="@+id/diaryImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/diaryArticle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 分享图标 -->
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/share"
            android:contentDescription="分享"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/back_blue"
            android:contentDescription="返回"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imagesRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/diaryImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
