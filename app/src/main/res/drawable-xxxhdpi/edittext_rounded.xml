<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 背景填充色（可以改成你需要的颜色） -->
    <solid android:color="@android:color/white" />

    <!-- 边框（可选，如果不需要边框可以删掉 stroke 块） -->
    <stroke
        android:width="1.5dp"
        android:color="#CCCCCC" />

    <!-- 四个角都设置为 12dp 圆角 -->
    <corners android:radius="22dp" />

    <!-- 控件内边距（推荐留一点内间距） -->
    <padding
        android:start="23dp"
        android:top="10dp"
        android:end="23dp"
        android:bottom="10dp" />
</shape>
